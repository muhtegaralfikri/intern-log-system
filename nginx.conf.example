# ===========================================
# NGINX Configuration untuk Intern Log System
# ===========================================
# Copy konfigurasi ini ke aaPanel > Website > Settings > Nginx Config
# Ganti "yourdomain.com" dengan domain Anda

# ==========================================
# OPSI 1: Satu domain dengan path berbeda
# ==========================================
# Frontend: https://yourdomain.com
# Backend:  https://yourdomain.com/api

server {
    listen 80;
    listen 443 ssl http2;
    server_name yourdomain.com;

    # SSL (dikelola aaPanel)
    ssl_certificate    /www/server/panel/vhost/cert/yourdomain.com/fullchain.pem;
    ssl_certificate_key    /www/server/panel/vhost/cert/yourdomain.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;

    # Redirect HTTP ke HTTPS
    if ($server_port !~ 443){
        rewrite ^(/.*)$ https://$host$1 permanent;
    }

    # Frontend (Next.js)
    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Backend API (NestJS)
    location /api/ {
        rewrite ^/api/(.*) /$1 break;
        proxy_pass http://127.0.0.1:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Untuk upload file
        client_max_body_size 10M;
    }

    # Static files caching
    location /_next/static {
        proxy_pass http://127.0.0.1:5000;
        proxy_cache_valid 60m;
        add_header Cache-Control "public, immutable, max-age=31536000";
    }

    access_log /www/wwwlogs/yourdomain.com.log;
    error_log /www/wwwlogs/yourdomain.com.error.log;
}


# ==========================================
# OPSI 2: Subdomain terpisah
# ==========================================
# Frontend: https://intern.yourdomain.com
# Backend:  https://api-intern.yourdomain.com

# --- Frontend ---
server {
    listen 80;
    listen 443 ssl http2;
    server_name intern.yourdomain.com;

    ssl_certificate    /www/server/panel/vhost/cert/intern.yourdomain.com/fullchain.pem;
    ssl_certificate_key    /www/server/panel/vhost/cert/intern.yourdomain.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;

    if ($server_port !~ 443){
        rewrite ^(/.*)$ https://$host$1 permanent;
    }

    location / {
        proxy_pass http://127.0.0.1:5000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    location /_next/static {
        proxy_pass http://127.0.0.1:5000;
        proxy_cache_valid 60m;
        add_header Cache-Control "public, immutable, max-age=31536000";
    }

    access_log /www/wwwlogs/intern.yourdomain.com.log;
    error_log /www/wwwlogs/intern.yourdomain.com.error.log;
}

# --- Backend API ---
server {
    listen 80;
    listen 443 ssl http2;
    server_name api-intern.yourdomain.com;

    ssl_certificate    /www/server/panel/vhost/cert/api-intern.yourdomain.com/fullchain.pem;
    ssl_certificate_key    /www/server/panel/vhost/cert/api-intern.yourdomain.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;

    if ($server_port !~ 443){
        rewrite ^(/.*)$ https://$host$1 permanent;
    }

    location / {
        proxy_pass http://127.0.0.1:5001;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # CORS headers (jika frontend di domain berbeda)
        add_header Access-Control-Allow-Origin "https://intern.yourdomain.com" always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Authorization, Content-Type" always;
        
        if ($request_method = OPTIONS) {
            return 204;
        }
        
        client_max_body_size 10M;
    }

    access_log /www/wwwlogs/api-intern.yourdomain.com.log;
    error_log /www/wwwlogs/api-intern.yourdomain.com.error.log;
}
